TEMPLATE        = app
LANGUAGE        = C++

CONFIG  += qt release thread opengl

QT	+= opengl

LIBS    += -L../lib -lbreve @LIBS@ 

INCLUDEPATH += ../include/breve

HEADERS += brqtGLWidget.h 	\
        brqtEngine.h 		\
        brqtMethodPopup.h 	\
        brqtLogWindow.h 	\
        brqtMainWindow.h 	\
        brqtEditorWindow.h 	\
	brqtFindDialog.h	\
        brqtSyntaxHighlighter.h

SOURCES += brqtGLWidget.cpp 	\
        main.cpp 		\
        brqtEngine.cpp 		\
        brqtLogWindow.cpp 	\
        brqtMainWindow.cpp 	\
	brqtMoveableWidgets.cpp	\
	brqtEditorWindow.cpp 	\
	brqtFindDialog.cpp	\
        brqtMethodPopup.cpp

FORMS =	brqtMainWindow.ui 	\
        brqtLogWindow.ui 	\
        brqtObjectInspector.ui 	\
        brqtEditorWindow.ui 	\
        brqtErrorWindow.ui 	\
	brqtWidgetPalette.ui 	\
	brqtFindDialog.ui

RESOURCES = breve.qrc

LEXSOURCES += brqtQuickparser.l

unix {
	UI_DIR = .ui
	MOC_DIR = .moc
	OBJECTS_DIR = .obj
}

mac {
	LIBS	+= -framework OpenGL
	CONFIG 	+= x86 ppc
}

QMAKE_CXXFLAGS  += @CPPFLAGS@
QMAKE_LFLAGS	+= @LDFLAGS@
