BREVEDIR	=	../..

all: URLPlugin.o

URLPlugin.o: URLFunctions.o
	$(CC) @PLUGINFLAGS@ @LDFLAGS@ -o URLPlugin.o URLFunctions.o -lcurl

.c.o:
	$(CC) -g @CPPFLAGS@ -c $*.c -I.. 

clean:
	-rm -f *.o

install: all
	-mkdir /usr/local/lib/breve/plugins
	cp pushPlugin.o /usr/local/lib/breve/plugins
	cp Push.tz /usr/local/lib/breve/plugins
