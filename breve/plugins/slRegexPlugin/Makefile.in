BREVEDIR	= ../..
CC		= @CC@
CFLAGS		= @CPPFLAGS@ -I..

all: RegexPlugin.o

RegexPlugin.o: RegexFuncs.o @PLUGINLIB@
	$(CXX) @PLUGINFLAGS@ -o $@ $^ @REGEXLIB@

clean:
	rm -f *.o

install: all
	mkdir -p @libdir@/breve/plugins
	cp RegexPlugin.o @libdir@/breve/plugins
	cp RegexParser.tz @libdir@/breve/plugins
