INTERNALO = $(shell ls *.c *.cc *.cpp | sed s/\.[a-z]\*$$/\.o/ )

all: $(INTERNALO)

INCLUDE	+= -I.. -I../../include/breve @CPPFLAGS@

.c.o:
	$(CXX) -fpermissive $(CFLAGS) $(DEFINES) $(INCLUDE) -c $<

.cc.o:
	$(CXX) -fpermissive $(CFLAGS) $(DEFINES) $(INCLUDE) -c $<

.cpp.o:
	$(CXX) -fpermissive $(CFLAGS) $(DEFINES) $(INCLUDE) -c $<
