LIBO	= multibody.o link.o shape.o integrate.o joint.o \
		camera.o world.o vclip.o vclipData.o patch.o gldraw.o netsim.o \
		shadow.o terrain.o volInt.o image.o movie.o lightdetector.o springs.o tiger.o

LIBS	+=-L../lib -lutil

INCLUDE	+=-I../include/breve @CPPFLAGS@

all: libbrsimulation.a 

.c.o: *.h
	$(CXX) -fpermissive $(CFLAGS) $(DEFINES) $(INCLUDE) -c $*.c

libbrsimulation.a: $(LIBO)
	$(AR) -crv libbrsimulation.a $(LIBO) 
	cp libbrsimulation.a ../lib
	$(RANLIB) ../lib/libbrsimulation.a
	cp *.h ../include/breve

install: all

clean:
	-/bin/rm -f *.o core libbrsimulation.a
