LIBO	= error.o memory.o hash.o list.o stack.o text.o matrix.o vector.o quat.o nr.o stringstream.o time.o

INCLUDE +=-I../include/breve

all: libbrutil.a 

.c.o: *.h
	$(CC) $(CFLAGS) $(INCLUDE) $(DEFINES) -c $*.c

libbrutil.a: $(LIBO)
	$(AR) -crv libbrutil.a $(LIBO)
	cp libbrutil.a ../lib
	cp *.h ../include/breve
	$(RANLIB) ../lib/libbrutil.a

install: all

clean:
	-/bin/rm -f $(LIBO) libbrutil.a
