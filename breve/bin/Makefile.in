BREVEO	= breve.o
BREVEC	= breve.c

BREVECLIO	= breve_cli.o
BREVECLIC	= breve_cli.c

LANGUAGE_FRONTEND_LIBRARY	= -lbrsteve

LIBS 	+=-L../lib $(LANGUAGE_FRONTEND_LIBRARY) -lbrkernel -lbrsimulation -lbrutil -lbrneural -lbrgraph @LDFLAGS@ -Xlinker -Bstatic @LIBS@ -lstdc++

INCLUDE	+= -I../include/breve @CPPFLAGS@

all: breve_cli breve

%.o: %.c
	$(CC) $(CFLAGS) $(DEFINES) $(INCLUDE) -c $<

breve: $(BREVEO) ../lib/libbrsimulation.a ../lib/libbrutil.a ../lib/libbrkernel.a
	$(CC) -o breve $(CFLAGS) $(BREVEO) @GLLIBS@ @AUDIOLIBS@ $(LIBS)

breve_cli: $(BREVECLIO) ../lib/libbrsimulation.a ../lib/libbrutil.a ../lib/libbrkernel.a
	$(CC) -o breve_cli $(CFLAGS) $(BREVECLIO) @GLLIBS@ @AUDIOLIBS@ $(LIBS)

clean:
	-rm -f breve breve_cli *.o

install: all
