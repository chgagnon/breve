INCLUDE += -I../include/breve
LIBS	+= -L../lib -L. -lbrutil -lz

CFILES	= graph.c draw.c
OFILES	= graph.o draw.o

all: libbrgraph.a graphTest

graphTest: libbrgraph.a graphTest.c
	$(CXX) $(CFLAGS) -o graphTest graphTest.c $(INCLUDE) -L. -lbrgraph $(LIBS) @GLLIBS@ @DEFS@
	
libbrgraph.a: $(OFILES)
	$(AR) crv libbrgraph.a $(OFILES)
	cp *.h ../include/breve
	cp libbrgraph.a ../lib
	$(RANLIB) libbrgraph.a
	$(RANLIB) ../lib/libbrgraph.a

install: all

.c.o: $(CFILES)
	$(CXX) -fpermissive $(CFLAGS) -c $*.c $(DEFINES) $(INCLUDE) 

clean:
	-rm *.o libbrgraph.a graphTest
