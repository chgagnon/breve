LIBO	= ff.o ffTrain.o

LIBS	+= -L../lib -lbrutil

INCLUDE	+= -I../include/breve -I../ode/include

.c.o: 
	$(CC) $(CFLAGS) -c $*.c $(DEFINES) $(INCLUDE)

all: libbrneural.a

libbrneural.a: $(LIBO)
	$(AR) -crv libbrneural.a $(LIBO) 
	cp libbrneural.a ../lib
	ranlib ../lib/libbrneural.a
	/bin/cp *.h ../include/breve

install: all

clean:
	-/bin/rm -f *.o core libbrneural.a test
